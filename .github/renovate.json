{
  "extends": [
    "config:base"
  ],
  "labels": ["type: dependency upgrade"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["*"],
      "allowedVersions": "!/SNAPSHOT$/"
    },
    {
      "matchPackagePatterns": [
        "^org\\.apache\\.groovy"
      ],
      "groupName": "groovy monorepo"
    },
    {
      "matchPackageNames": [
        "org.graceframework:grace-bom",
        "org.graceframework:grace-bootstrap",
        "org.graceframework:grace-codecs",
        "org.graceframework:grace-console",
        "org.graceframework:grace-core",
        "org.graceframework:grace-databinding",
        "org.graceframework:grace-dependencies",
        "org.graceframework:grace-docs",
        "org.graceframework:grace-encoder",
        "org.graceframework:grace-gradle-model",
        "org.graceframework:grace-logging",
        "org.graceframework:grace-plugin-codecs",
        "org.graceframework:grace-plugin-controllers",
        "org.graceframework:grace-plugin-databinding",
        "org.graceframework:grace-plugin-datasource",
        "org.graceframework:grace-plugin-domain-class",
        "org.graceframework:grace-plugin-i18n",
        "org.graceframework:grace-plugin-interceptors",
        "org.graceframework:grace-plugin-mimetypes",
        "org.graceframework:grace-plugin-rest",
        "org.graceframework:grace-plugin-services",
        "org.graceframework:grace-plugin-url-mappings",
        "org.graceframework:grace-plugin-url-validation",
        "org.graceframework:grace-shell",
        "org.graceframework:grace-spring",
        "org.graceframework:grace-test",
        "org.graceframework:grace-validation",
        "org.graceframework:grace-web",
        "org.graceframework:grace-web-boot",
        "org.graceframework:grace-web-common",
        "org.graceframework:grace-web-databinding",
        "org.graceframework:grace-web-fileupload",
        "org.graceframework:grace-web-mvc",
        "org.graceframework:grace-web-url-mappings"
      ],
      "groupName": "grace monorepo"
    }
  ]
}
